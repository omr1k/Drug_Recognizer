<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >


    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="Your Biggest Wealth is Your Health"
        android:textColor="@color/white"
        android:fontFamily="@font/h1"
        android:gravity="center"
        android:textSize="@dimen/_15sdp"
        android:paddingRight="20dp"
        android:drawableRight="@drawable/ic_medicine"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:orientation="vertical">
    <ImageView
        android:padding="@dimen/_5sdp"
        android:layout_weight="3"
        android:layout_margin="5dp"
        android:id="@+id/img"
        android:layout_width="match_parent"
        android:layout_height="0dp" />

    <TextView
        android:fontFamily="@font/h1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:textSize="@dimen/_10ssp"
        android:gravity="center"
        android:textColor="#FFFFFF"
        android:id="@+id/tv"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:paddingRight="@dimen/_20sdp"
            android:drawableRight="@drawable/ic_baseline_camera_alt_24"
            android:fontFamily="@font/h1"
            android:layout_margin="5dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Capture"
            android:textAllCaps="false"
            android:textSize="@dimen/_12ssp"
            android:background="@drawable/button_c"
            android:textColor="#FFFFFF"
            android:id="@+id/bc"
            android:onClick="capture"/>

        <Button
            android:paddingLeft="@dimen/_20sdp"
            android:drawableLeft="@drawable/ic_baseline_photo_library_24"
            android:fontFamily="@font/h1"
            android:layout_margin="5dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Open Gallery"
            android:textAllCaps="false"
            android:textSize="@dimen/_12ssp"
            android:gravity="center"
            android:background="@drawable/button_g"
            android:textColor="#FFFFFF"
            android:id="@+id/bg"
            android:onClick="gallery"/>

    </LinearLayout>

    <Button
        android:paddingRight="75dp"
        android:paddingLeft="75dp"
        android:drawableRight="@drawable/ic_drugs"
        android:fontFamily="@font/h1"
        android:background="@drawable/button_detect"
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="Get Drug Info"
        android:textAllCaps="false"
        android:textSize="@dimen/_18ssp"
        android:gravity="center"
        android:textColor="#FFFFFF"
        android:id="@+id/bd" />

</LinearLayout>
















